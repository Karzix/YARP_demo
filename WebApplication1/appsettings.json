{
    
        "ReverseProxy": {
            "Routes": {
                "route1": {
                    "ClusterId": "cluster1",
                    "Match": {
                        "Path": "product-api/{**catch-all}"
                    }
                },
                "route2": {
                    "ClusterId": "cluster2",
                    "Match": {
                        "Path": "cart-api/{**catch-all}"
                    }
                }
            },
            "Clusters": {
                "cluster1": {
                    "Destinations": {
                        "cluster1/destination1": {
                            "Address": "https://localhost:5001"
                        }
                    }
                },
                "cluster2": {
                    "Destinations": {
                        "cluster2/destination2": {
                            "Address": "https://localhost:6001"
                        }
                    }
                }
            }
        }
    ,
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}
